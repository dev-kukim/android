<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Bad" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_bad</item>
        <item name="colorPrimaryDark">@color/primary_bad_d</item>
        <item name="colorAccent">@color/primary_bad_a</item>
    </style>

    <style name="AppTheme.Normal" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_normal</item>
        <item name="colorPrimaryDark">@color/primary_normal_d</item>
        <item name="colorAccent">@color/primary_normal_a</item>
    </style>

    <style name="AppTheme.Good" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_good</item>
        <item name="colorPrimaryDark">@color/primary_good_d</item>
        <item name="colorAccent">@color/primary_good_a</item>
    </style>

</resources>
